.ui-loader
  width: 100px;
  height: 40px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin: -20px -50px;
  
  &__dot
    width: 20px;
    height: 20px;
    background: #FFF;
    border-radius: 50%;
    position: absolute; 
    
    $delay-base = 0
    $delay-shift = .4
    
    for n in (1..5)
      &:nth-child({n})
        animation: animate 2s linear infinite unit($delay-base - $delay-shift * n, 's')


@-webkit-keyframes animate {
  0%   { left: 100px; top:0}
  80%  { left: 0; top:0;}
  85%  { left: 0; top: -20px; width: 20px; height: 20px;}
  90%  { width: 40px; height: 15px; }
  95%  { left: 100px; top: -20px; width: 20px; height: 20px;}
  100% { left: 100px; top:0; }
}
